# Test Environment Configuration
# Copy this file to .env and update values as needed

# Environment (local, sit, uat, prod)
TEST_ENV=local

# Browser selection (all, chromium, firefox, webkit, edge, mobile, mobile-chrome, mobile-safari)
BROWSER=all

# Headless mode (true/false)
HEADLESS=true

# Environment URLs
SIT_URL=https://sit.demoblaze.com
UAT_URL=https://uat.demoblaze.com
PROD_URL=https://www.demoblaze.com

# Database Configuration for different environments
LOCAL_DB_HOST=localhost
LOCAL_DB_PORT=3306
LOCAL_DB_USER=admin
LOCAL_DB_PASSWORD=password
LOCAL_DB_NAME=testdb

SIT_DB_HOST=sit-db.example.com
SIT_DB_PORT=3306
SIT_DB_USER=situser
SIT_DB_PASSWORD=sitpass
SIT_DB_NAME=sitdb

UAT_DB_HOST=uat-db.example.com
UAT_DB_PORT=3306
UAT_DB_USER=uatuser
UAT_DB_PASSWORD=uatpass
UAT_DB_NAME=uatdb

# Test Data Paths
LOGIN_DATA_PATH=src/data/local/login.data.csv
HOME_DATA_PATH=src/data/local/home.data.csv
